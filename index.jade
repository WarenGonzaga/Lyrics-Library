  body#pageEvent
    // /// MAIN PAGE ///
    // // Page //
    div(data-role='page', data-theme='a')
      // // Side Menu //
      #sidemenu.teal-l1(data-role='panel', data-display='overlay', data-position-fixed='true')
        #panel-nameplace
          #anim.sidemenu-name
            span.appName
          #version Version
      // // Header Page //
      .teal-l1(data-role='header', data-position='fixed', data-tap-toggle='false')
        a.ui-btn.ui-btn-icon-notext.ui-icon-left.ui-corner-all.ui-nodisc-icon.ui-icon-bars.teal-l1(href='#sidemenu') Side Menu
        .app-name
          span.appName
            | Developers Mode
        // // Navigation //
        div(data-role='navbar')
          ul
            li
              a#activeTab.ui-btn.ui-btn-icon-left.ui-icon-grid.nav-name(href='#', onclick='allTab(); return false;')
                b All
            li
              a.ui-btn.ui-btn-icon-left.icon.ui-icon-bullets.nav-name(href='#', onclick='albumTab(); return false;')
                b Albums
            li
              a.ui-btn.ui-btn-icon-left.ui-icon-user.nav-name(href='#', onclick='artistTab(); return false;')
                b Owl City
      // // Body of Page //
      .ui-content.grey-l3(data-role='main')
        // // Contents for All //
        #all
          form.ui-filterable
            input#AllSearch(data-type='search', placeholder='Search all')
          ul(data-role='listview', data-filter='true', data-input='#AllSearch')
            // This is all content of the app
        // /All
        // // Contents for Album //
        #album
          form.ui-filterable
            input#AlbumSearch(data-type='search', placeholder='Search album')
          ul.ui-content.animated.fadeIn(data-role='listview', data-filter='true', data-input='#AlbumSearch')
            li.grey-l3
              .album
                img.album-art.album-art-closed(src='assets/res/album-art/owlcity/owlcity_09.jpg', alt='Album Art', onerror="this.src='assets/res/album-art/onerror.png'")
                .album-title
                  | Mobile Orchestra
                .album-date
                  | July 10, 2015
            li.grey-l3
              .album
                img.album-art.album-art-closed(src='assets/res/album-art/owlcity/owlcity_08.jpg', alt='Album Art', onerror="this.src='assets/res/album-art/onerror.png'")
                .album-title
                  | Ultraviolet
                .album-date
                  | June 27, 2014
            li.grey-l3
              .album
                img.album-art.album-art-closed(src='assets/res/album-art/owlcity/owlcity_07.jpg', alt='Album Art', onerror="this.src='assets/res/album-art/onerror.png'")
                .album-title
                  | The Midsummer Station - Acoustic
                .album-date
                  | July 30, 2013
            li.grey-l3
              .album
                img.album-art.album-art-closed(src='assets/res/album-art/owlcity/owlcity_06.jpg', alt='Album Art', onerror="this.src='assets/res/album-art/onerror.png'")
                .album-title
                  | The Midsummer Station
                .album-date
                  | August 17, 2012
            li.grey-l3
              .album
                img.album-art.album-art-closed(src='assets/res/album-art/owlcity/owlcity_05.jpg', alt='Album Art', onerror="this.src='assets/res/album-art/onerror.png'")
                .album-title
                  | Shooting Star
                .album-date
                  | May 15, 2012
            li.grey-l3
              .album
                img.album-art.album-art-closed(src='assets/res/album-art/owlcity/owlcity_04.jpg', alt='Album Art', onerror="this.src='assets/res/album-art/onerror.png'")
                .album-title
                  | All Things Bright & Beautiful
                .album-date
                  | June 14, 2011
            li.grey-l3
              .album
                img.album-art(src='assets/res/album-art/owlcity/owlcity_03.jpg', alt='Album Art', onerror="this.src='assets/res/album-art/onerror.png'")
                .album-title
