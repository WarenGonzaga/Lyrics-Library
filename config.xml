<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.wareneutron.lyricslibrary"
        version   = "3.0.0">

    <name>Lyrics Library</name>

    <description>
        An application dedicated to Owl City! Application for lyrics with online listening to music!
    </description>

    <author href="http://warengonzaga.github.io/sites/wareneutrondevteam.html" email="wareneutrondevteam@gmail.com">
        Wareneutron Developers
    </author>
    
    <content src="index.html"/>
    
    <feature name="android">
        <param name="android-package" value="org.apache.cordova.device.Device"/>
    </feature>
    
    <preference name="permissions"                value="none"/>

    <!-- Customize your app and platform with the preference element. -->
    <preference name="orientation"                value="default" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="target-device"              value="universal" />      <!-- all: possible values handset, tablet, or universal -->
    <preference name="fullscreen"                 value="true" />           <!-- all: hides the status bar at the top of the screen -->
    <preference name="android-installLocation"    value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
    
    <!-- Define a specific version of PhoneGap to build into your app. -->
    <preference name="phonegap-version"       value="cli-5.2.0" />

    <!-- Plugins -->

    <!-- Core plugins -->
    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />
    
    <!--Icons-->
    <icon src="icon.png" />
    <icon src="assets/res/appicon/mipmap-hdpi/ic_launcher.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="assets/res/appicon/mipmap-mdpi/ic_launcher.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="assets/res/appicon/mipmap-xhdpi/ic_launcher.png"  gap:platform="android"    gap:qualifier="xhdpi" />
    <icon src="assets/res/appicon/mipmap-xxhdpi/ic_launcher.png"  gap:platform="android"    gap:qualifier="xxhdpi" />
    <icon src="assets/res/appicon/mipmap-xxxhdpi/ic_launcher.png"  gap:platform="android"    gap:qualifier="xxxhdpi" />

    <access origin="*"/>
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>